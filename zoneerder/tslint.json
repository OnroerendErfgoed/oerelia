{
  "extends": "tslint:recommended",
  "rules": {
    "quotemark": [
      true,
      "single",
      "double"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "max-classes-per-file": false,
    "object-literal-sort-keys": false,
    "object-literal-shorthand": false,
    "arrow-parens": false,
    "no-console": [
      true,
      "log",
      "warn",
      "error"
    ],
    "linterOptions": {
      "exclude": [
        "node_modules/**"
      ]
    }
  }
}
